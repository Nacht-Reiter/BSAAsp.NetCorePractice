                    <a href=@($"#Posts") data-toggle="collapse" class="text-info">@Html.DisplayNameFor(model => model.Item1.Posts)</a>
                </dt>
                <dd>
                    <div id=@($"Posts") class="collapse">
                        @{
                            if (Model.Item1.Posts.Count() != 0)
                            {
                                @foreach (var p in Model.Item1.Posts)
                                {
                                    <a class="col-xs-12 no-spacing" asp-controller="Post" asp-action="Details" asp-route-id=@($"{p.Id}")>Id: @Html.DisplayFor(modelItem => p.Id)</a>
                                }
                            }
                            else
                            {
