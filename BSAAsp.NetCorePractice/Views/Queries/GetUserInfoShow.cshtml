        </div>

        <div id="User" class="collapse panel-body" data-parent="#accordion">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Item1.Name)
                </dt>
                <dd>
                    <a asp-action="Details" asp-controller="User" asp-route-id="@Model.Item1?.Id"> @Html.DisplayFor(model => model.Item1.Name)</a>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Item1.Id)
                </dt>
